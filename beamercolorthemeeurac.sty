% some modifications of the beaver color theme.

\mode<presentation>

\definecolor{darkred}{rgb}{0.8,0,0}
\definecolor{eurac_red}{RGB}{208,77,42}
\definecolor{eurac_grey}{RGB}{132,139,148}
\definecolor{eurac_lightgrey}{RGB}{201,206,205}
\definecolor{eurac_green}{RGB}{141,191,96}
\definecolor{eurac_yellow}{RGB}{239,193,75}
\definecolor{eurac_blue}{RGB}{107,174,226}

\setbeamercolor{section in toc}{fg=black,bg=white}
\setbeamercolor{alerted text}{fg=eurac_red!80!gray}
\setbeamercolor*{palette primary}{fg=eurac_red!60!black,bg=gray!30!white}
\setbeamercolor*{palette secondary}{fg=eurac_red!70!black,bg=gray!15!white}
\setbeamercolor*{palette tertiary}{bg=eurac_red!80!black,fg=gray!10!white}
\setbeamercolor*{palette quaternary}{fg=eurac_red,bg=gray!5!white}

\setbeamercolor*{sidebar}{fg=eurac_red,bg=gray!15!white}

\setbeamercolor*{palette sidebar primary}{fg=eurac_red!10!black}
\setbeamercolor*{palette sidebar secondary}{fg=white}
\setbeamercolor*{palette sidebar tertiary}{fg=eurac_red!50!black}
\setbeamercolor*{palette sidebar quaternary}{fg=gray!10!white}

%\setbeamercolor*{titlelike}{parent=palette primary}
\setbeamercolor{titlelike}{parent=palette primary,fg=eurac_red}
\setbeamercolor{frametitle}{bg=eurac_grey!10!white}
\setbeamercolor{frametitle right}{bg=eurac_grey!60!white}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

\setbeamercolor{itemize item}{fg=gray!70!white}
\setbeamercolor{itemize subitem}{fg=gray!50!white}


\mode
<all>
